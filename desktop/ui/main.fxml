<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<VBox prefHeight="400.0" prefWidth="600.0" style="-fx-background-radius: 18; -fx-background-radius: 18; -fx-background-color: yellow;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane id="toolbar">
         <left>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Online Notes Service" BorderPane.alignment="CENTER">
               <font>
                  <Font size="29.0" />
               </font>
            </Text>
         </left>
         <right>
            <Button id="closeButton" mnemonicParsing="false" style="-fx-background-color: red;" text="Close" BorderPane.alignment="TOP_RIGHT" />
         </right>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </BorderPane>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="IP Address" />
            <TextField />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Note" />
            <AnchorPane>
               <children>
                  <TextArea id="notesContent" cache="true" cacheHint="QUALITY" promptText="Write a note" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextArea>
               </children>
            </AnchorPane>
            <BorderPane>
               <center>
                  <Button id="uploadButton" mnemonicParsing="false" text="Upload" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="26.0" />
                     </font>
                     <tooltip>
                        <Tooltip text="Upload the note to the server" />
                     </tooltip>
                  </Button>
               </center>
            </BorderPane>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
